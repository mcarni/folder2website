<!-- views-partials/navbar.ejs -->

<!-- Navbar row -->

<!-- // remember body  has been opened-->
  <!-- // remember main div container has been opened-->  
    <div class="row">
      <nav class="navbar navbar-collapse"> 
        <div class="col"></div>
        <!-- columns for centered navbar -->
        <div class="col-8">

          <div class="collapse navbar-collapse" id="navbarToggler">
            <ul class="navbar-nav rounded-4">

              <li class="nav-item px-0">
              <% Object.keys(siteNavbar[pageLanguage]).forEach((key,index) => { %>
                <% if (key != "0" && !isRoot) { %>
                  <% if (siteNavbar[pageLanguage][key]["name"] == pageName) { %>
                    <a class="nav-link px-0 customActive" aria-current="page" href=<%- siteNavbar[pageLanguage][key]["name"] %>><i class="px-3 fas fa-<%- siteNavbar[pageLanguage][key]["icon"] %>"></i><%= siteNavbar[pageLanguage][key]["menu"] %></a>
                  <%} else { %>
                    <a class="nav-link" aria-current="page" href=<%- siteNavbar[pageLanguage][key]["name"] %>><i class="px-3 fas fa-<%- siteNavbar[pageLanguage][key]["icon"] %>"></i><%= siteNavbar[pageLanguage][key]["menu"] %></a>
                  <% } %>
                <% } else if (key != "0" && isRoot) { ; %>
                  <% if (siteNavbar[pageLanguage][key]["name"] == pageName) { %>
                    <a class="nav-link customActive" aria-current="page" href=<%- pageLanguage + "/" + siteNavbar[pageLanguage][key]["name"] %>><i class="px-3 fas fa-<%- siteNavbar[pageLanguage][key]["icon"] %>"></i><%= siteNavbar[pageLanguage][key]["menu"] %></a>
                  <%} else { %>
                    <a class="nav-link" aria-current="page" href=<%- pageLanguage + "/" + siteNavbar[pageLanguage][key]["name"] %>><i class="px-3 fas fa-<%- siteNavbar[pageLanguage][key]["icon"] %>"></i><%= siteNavbar[pageLanguage][key]["menu"] %></a>
                  <% } %>
                <% }; %>
              <% }); %>
              </li>

              
              <!-- language chooser dropdown check flagpedia-->  
              <div class="dropdown px-2">
                <button class="px-0 dropdown-toggle nav-link" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="px-3 fas fa-language"></i>Change Language
                </button>
                <ul class="dropdown-menu my-1 py-1">
                  <% Object.keys(siteNavbar).forEach((language,index) => { %>
                    <% let link = rootWebPage + "/" + language + "/home" %>
                    <li class="my-1 py-0 px-3 navbar nav-link">
                      <% let flagWebsite = "https://flagcdn.com/" + language + ".svg"; %>
                      <a class="dropdown-item nav-item nav-link rounded-1 my-1 py-1 text-uppercase" aria-current="page" href=<%- link %>><i class="px-3 fas fa-<%- language %>"><img  class="flag" src=<%- flagWebsite %> alt=<%- language %>></i><%= language %></a>
                    </li>
                  <% }); %>
                </ul>
              </div>




            </ul>
          </div>
        </div>

        
        <div class="col">
            <a class="navbar-brand float-end" href="#"></a>
            <button class="navbar-toggler float-end" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon float-end"></span>
            </button>
        </div>
          
      </nav>
    </div>


