<!-- views-partials/month.ejs -->



<!-- // remember body  has been opened-->
  <!-- // remember main div container has been opened-->  
    <!-- Main row -->
    
    <!-- get current month -->
    <%  const month = ["Gennaio","Febbraio","Marzo","Aprile","Maggio","Giugno","Luglio","Agosto","Settembre","Ottobre","Novembre","Dicembre"]; %> 
    <%  const d = new Date(); %>
    <%  let monthName = month[d.getMonth()]; %>
    
    <!-- Ugly hack to add collapse as a class when needed -->
    <% if (row["title"] === monthName ) { %> 
      <div class= "row my-2 justify-content-center" id= <%- row["id"] %>  >
    <% } else { %>
      <div class="row my-2 justify-content-center collapse" id= <%- row["id"] %>  >
    <% } %>
    
    
      <h2 class="homeTitle"><%= row["title"] %></h2>
      
      <% row["events"].forEach((key,index) => { %>
        <div class="row card card-custom1 p-3 m-2">
          <h3 class="card-title"><%- key["event-title"] %></h3>
          <h6 class="card-header"><%- key["event-header1"] %></h6>
          <h6 class="card-header"><%- key["event-header2"] %></h6>
          <h6 class="card-header"><%- key["event-header3"] %></h6>
          <div class="card-body p-2">
          <p class="card-text mt-4"><%- key["event-text"] %></p>
          <a href=<%- key["event-link"] %> class="btn btn btn-lg btn-custom2"><%- key["event-link-text"] %></a>
          </div>
        </div>
      <% }) %>
  

    </div><!-- /row --> 
